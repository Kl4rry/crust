# Tom scott's FizzBuzz implementation in Crust.

for $i in 1..100 {
    let $output = ""
    if $i % 3 == 0 {
        $output = "$($output)Fizz"
    }

    if $i % 5 == 0 {
        $output = "$($output)Buzz"
    }

    if $output == "" {
        $output = $i
    }

    echo $output

    $i = $i + 1
}